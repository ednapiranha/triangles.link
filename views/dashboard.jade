include mixins
extend layout

block content
  section#area
    svg#back
      filter#artifacts
        feComponentTransfer
      g(filter='url(#artifacts)')

    svg#mountain
    svg#land-upper
    svg#land-lower
    svg#mining
  #playground

  #mining-area
    img#vehicle
    img.hole.fade

block footer
  footer
    #avatar
    #health
      .status#health-state1
      .status#health-state2
      .status#health-state3
      .status#health-state4
      .status#health-state5
    ol#messages
    form#message(method='post')
      input(type='text', placeholder='chat here')
    span#active 0
